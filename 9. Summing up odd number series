#include <stdio.h>

int main() {
    int n, i, sum = 0;
    printf("Enter the number of odd numbers you want to sum the squares of: ");
    scanf("%d", &n);
    for (i = 1; i <= n*2-1; i += 2) {
        sum += (i*i);
    }
    printf("The sum of the squares of the first %d odd numbers is %d", n, sum);
    return 0;
}
